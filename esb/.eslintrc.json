{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": ["google"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-console": "off",
    "semi": "off",
    "linebreak-style": "off",
    "object-curly-spacing": ["error", "always"],
    "max-len": [
      "error",
      {
        "code": 150,
        "tabWidth": 2
      }
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ]
  }
}